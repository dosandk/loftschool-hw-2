doctype html
- var smallGalleryItem = 9
- var productGalleryItem1 = 3
- var productGalleryItem2 = 6
html(lang="ru")
    head
        title loftschool homework-2

        meta(charset="utf-8")
        meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')

        link(rel='icon' href='../favicon-logo-16x16.ico' type='image/x-icon')
        link(rel='shortcut icon' href='../favicon-logo-16x16.ico' type='image/x-icon')

        link(type='text/css', rel="stylesheet", href="../css/ui/default.css")
        link(type='text/css', rel="stylesheet", href="../css/fonts/elektra.css")
        link(type='text/css', rel="stylesheet", href="../css/jquery-plugins/jcarousel.basic.css")

        <!--[if lt IE 9]>
        script(type='text/javascript', src='../js/libs/html5js/html5.js')
        <![endif]-->

    body

        div.main-wrapper

            div.container.cf
                aside.left-side-bar
                    div.header-logo-container
                        a(href='#'): img.vertical-align-middle(src='../img/separated/logo-199x57.png', alt='apple-shop-logo')
                    article.order-form
                        div.order-form-title.font-size-25 Заказать звонок
                        form(id='call-order-form', action='javascript:void(0)')
                            div.call-order-form-fieldset
                                label.call-order-form-label.font-size-14(for='user-name') Ваше имя
                                input.call-order-form-input.right.font-size-12(id='user-name', name='userName' type='text', placeholder='Ваше имя')
                                div.error-wrapper.font-size-12
                            div.call-order-form-fieldset
                                label.call-order-form-label.font-size-14(for='user-phone-number') Телефон
                                input.call-order-form-input.right.font-size-12(id='user-phone-number', name='userPhoneNumber', type='text', placeholder='+7 (912) 000-00-00')
                                div.error-wrapper.font-size-12
                            div.call-order-form-fieldset.display-table.parent-width
                                div.display-table-cell.vertical-align-middle
                                    label.font-size-14 Дата звонка
                                div.display-table-cell.vertical-align-middle.to-right-inline.call-order-form-select-wrap
                                    div.display-inline-block.relative
                                        select.call-order-form-select.custom.font-size-12.right(id='day-of-call', name='dayOfCall')
                                            - var days = 0
                                            while days++ < 31
                                                option(value='#{days}') #{days}
                                        label.inline-icon.call-order-form-select-label(for='day-of-call')
                                    div.display-inline-block.relative
                                        select.call-order-form-select.custom.font-size-12.right(id='month-of-call', name='monthOfCall')
                                            - var months = 0
                                            while months++ < 12
                                                option(value='#{months}') #{months}
                                        label.inline-icon.call-order-form-select-label(for='month-of-call')
                            div.call-order-form-fieldset
                                textarea.call-order-form-textarea.font-size-12(id='user-message', name='userMessage', placeholder='Комментарий')
                                div.error-wrapper.font-size-12
                            input.order-form-submit-btn(type='submit', value='Отправить')
                            input.order-form-reset-btn.right(type='reset', value='Очистить')
                    article.gallery
                        ul.gallery-list
                            while smallGalleryItem-- > 0
                                li.gallery-list-item
                                    a(href='#')
                                        img.vertical-align-middle(src='../img/separated/gallery-icon[#{smallGalleryItem}]-70x70.png', alt='gallery-item')
                    article.display-table-cell.vertical-align-middle.contacts.font-size-14
                        div
                            span.inline-icon.vertical-align-middle.location-icon
                            span г. Москва, ул. Новая 246, офис 214.
                        div
                            span.inline-icon.vertical-align-middle.phone-icon
                            span
                                a.contact-phone(href='tel:+79213221232'): script(type='text/javascript') document.write('+7(921) 322-12-32')

                section.content
                    div.carousel-container.relative
                        div.jcarousel
                            ul
                                - var carouselItem = 4
                                while carouselItem--
                                    li.img-carousel-item(style="background: url('../img/separated/carousel[#{carouselItem}]-740x300.jpg')", alt='carousel-item')
                        div.inline-icon.nav-arrow-left.font-size-17
                            div.display-table.parent-size.jcarousel-control-prev.none-selectable.to-center-inline: span.display-table-cell.vertical-align-middle.nav-arrow-txt Пред.
                        div.inline-icon.nav-arrow-right.font-size-17
                            div.display-table.parent-size.jcarousel-control-next.none-selectable.to-center-inline: span.display-table-cell.vertical-align-middle.nav-arrow-txt След.
                        div.img-description-block
                            div.font-size-18: a.img-description-block-title-link(href='#') iMac за пол цены
                            div.img-description-block-txt.font-size-14 Принеси свой старый Mac и получи скидку на новый!
                    section.main-gallery
                        article
                            header.main-gallery-header.display-table.parent-width.fixed-table-layout
                                div.display-table-cell.vertical-align-middle
                                    div.header-line
                                h2.display-table-cell.vertical-align-middle.gallery-category-title.font-size-25 Популярные товары
                                div.display-table-cell.vertical-align-middle
                                    div.header-line
                            ul.main-gallery-list.cf
                                while productGalleryItem1-- > 0
                                    li.main-gallery-list-item
                                        div.display-table.parent-width.fixed-table-layout.product-view-table
                                            div.display-table-cell.vertical-align-middle.product-view-img
                                                img(src='../img/separated/product-[#{productGalleryItem1}].jpg', alt='product-[#{productGalleryItem1}')
                                            div.display-table-cell.vertical-align-middle.product-view-description.font-size-15
                                                a.product-view-description-link(href='#') Apple Thunderb Display 27''
                                        table.product-description-table.parent-width.fixed-table-layout.font-size-14
                                            tr
                                                td.parent-half-width Артикул
                                                td.parent-half-width 42787825
                                            tr
                                                td.parent-half-width Опция
                                                td.parent-half-width включена
                                            tr
                                                td.parent-half-width Цвет
                                                td.parent-half-width серебристый
                                            tr
                                                td.parent-half-width Размер
                                                td.parent-half-width 1280*1245*90
                                            tr
                                                td.parent-half-width Вес
                                                td.parent-half-width 9 кг
                        article
                            header.main-gallery-header.display-table.parent-width.fixed-table-layout
                                div.display-table-cell.vertical-align-middle
                                    div.header-line
                                h2.display-table-cell.vertical-align-middle.gallery-category-title.font-size-25 Товары со скидкой
                                div.display-table-cell.vertical-align-middle
                                    div.header-line
                            ul.main-gallery-list.cf
                                while productGalleryItem2-- > 3
                                    li.main-gallery-list-item
                                        div.display-table.parent-width.fixed-table-layout.product-view-table
                                            div.display-table-cell.vertical-align-middle.product-view-img
                                                img(src='../img/separated/product-[#{productGalleryItem2}].jpg')
                                            div.display-table-cell.vertical-align-middle.product-view-description.font-size-15
                                                a.product-view-description-link(href='#') Apple Thunderb Display 27''
                                        table.product-description-table.parent-width.fixed-table-layout.font-size-14
                                            tr
                                                td.parent-half-width Артикул
                                                td.parent-half-width 42787825
                                            tr
                                                td.parent-half-width Опция
                                                td.parent-half-width включена
                                            tr
                                                td.parent-half-width Цвет
                                                td.parent-half-width серебристый
                                            tr
                                                td.parent-half-width Размер
                                                td.parent-half-width 1280*1245*90
                                            tr
                                                td.parent-half-width Вес
                                                td.parent-half-width 9 кг

            footer.footer
                div.footer-inner-wrap.relative
                    div#scroll-top-btn.display-table.to-center-inline.font-size-18.scroll-up-arrow
                        span.vertical-align-middle.display-table-cell Наверх
                    div.display-table.parent-size.fixed-table-layout

                        div.display-table-cell.vertical-align-middle
                            a(href=''): img(src='../img/separated/logo-footer-139x39.png', alt='apple-shop-logo')
                        div.display-table-cell.vertical-align-middle.footer-navigation-list.font-size-15
                                div.footer-navigation-list-item
                                    h3.footer-navigation-list-item-title О магазине
                                    ul
                                        li: a.footer-navigation-list-item-link(href="#") О нас
                                        li: a.footer-navigation-list-item-link(href="#") Наши цены
                                        li: a.footer-navigation-list-item-link(href="#") Наши скидки
                                        li: a.footer-navigation-list-item-link(href="#") Акции
                                div.footer-navigation-list-item
                                    h3.footer-navigation-list-item-title Каталог
                                    ul
                                        li: a.footer-navigation-list-item-link(href="#") Смартфоны
                                        li: a.footer-navigation-list-item-link(href="#") Планшеты
                                        li: a.footer-navigation-list-item-link(href="#") Компьютеры
                                        li: a.footer-navigation-list-item-link(href="#") Аксессуары
                                div.footer-navigation-list-item
                                    h3.footer-navigation-list-item-title Контакты
                                    ul
                                        li: a.footer-navigation-list-item-link(href="#") Телефоны
                                        li: a.footer-navigation-list-item-link(href="#") Адреса
                                        li: a.footer-navigation-list-item-link(href="#") Карта проезда
                                        li: a.footer-navigation-list-item-link(href="#") Обратная связь
                        div.display-table-cell.vertical-align-middle
                            ul.store-wrapper.to-right-inline
                                li.inline-icon.app-store-icon
                                    a.display-block.parent-size(href="http://store.apple.com"): span.hide http://store.apple.com
                                li.inline-icon.google-play-icon
                                    a.display-block.parent-size(href="https://play.google.com"): span.hide https://play.google.com
                            ul.to-center-inline.social-links-block
                                li.inline-icon.social-icon.vk-social-icon: a.display-block.parent-size(href="https://vk.com"): span.hide https://vk.com
                                li.inline-icon.social-icon.fb-social-icon: a.display-blockcf.parent-size(href="https://facebook.com"): span.hide https://facebook.com
                                li.inline-icon.social-icon.tw-social-icon: a.display-block.parent-size(href="https://twitter.com"): span.hide https://twitter.com

        script(type='text/javascript', src='../js/libs/jquery/jquery.min.js')
        script(type='text/javascript', src='../js/libs/jquery-plugins/jquery.validate.min.js')
        script(type='text/javascript', src='../js/libs/jquery-plugins/jquery.jcarousel.min.js')
        script(type='text/javascript', src='../js/app.js')

        script(type='text/javascript') $(function() {app.initialize()})
